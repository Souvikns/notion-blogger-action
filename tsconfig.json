{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "DOM",
            "esnext"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "declarationDir": "./build",
        "outDir": "./build",
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}